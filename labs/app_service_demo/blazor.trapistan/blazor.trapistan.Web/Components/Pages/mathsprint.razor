@page "/mathsprint"
@rendermode InteractiveServer

<PageTitle>🧠 Math Sprint</PageTitle>

<style>
    .game-container {
        font-family: monospace;
        max-width: 500px;
        margin: auto;
        padding: 2rem;
        background: #222;
        color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 10px #0ff;
        text-align: center;
    }

    .question {
        font-size: 1.5rem;
        margin: 1rem 0;
    }

    input[type="number"] {
        font-size: 1.25rem;
        padding: 0.5rem;
        width: 100px;
        text-align: center;
        margin-bottom: 1rem;
    }

    .score {
        margin-top: 1rem;
        font-size: 1.2rem;
    }

    button {
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        margin-top: 1rem;
    }

    .correct {
        color: #0f0;
    }

    .wrong {
        color: #f00;
    }
</style>

<div class="game-container">
    <h2>⚡ Math Sprint Challenge ⚡</h2>

    @if (!gameOver)
    {
        <div>
            <div class="question">What is @num1 + @num2?</div>
            <input type="number" @bind="userAnswer" @bind:event="oninput" @onkeydown="CheckKey" />
            <button @onclick="SubmitAnswer">Submit</button>
            <div class="score">
                Score: <strong>@score</strong> |
                Attempts: @attempts/10
            </div>
            @if (!string.IsNullOrEmpty(feedback))
            {
                <p class="@feedbackClass">@feedback</p>
            }
        </div>
    }
    else
    {
        <h3>Game Over!</h3>
        <p>Your final score: <strong>@score</strong></p>
        <button @onclick="ResetGame">Try Again</button>
    }
</div>

@code {
    private int num1;
    private int num2;
    private int userAnswer;
    private int score = 0;
    private int attempts = 0;
    private string feedback = "";
    private string feedbackClass = "";
    private bool gameOver = false;

    protected override void OnInitialized()
    {
        GenerateQuestion();
    }

    private void GenerateQuestion()
    {
        var rand = new Random();
        num1 = rand.Next(1, 20);
        num2 = rand.Next(1, 20);
    }

    private void SubmitAnswer()
    {
        if (userAnswer == num1 + num2)
        {
            score++;
            feedback = "Correct!";
            feedbackClass = "correct";
        }
        else
        {
            feedback = $"Wrong! It was {num1 + num2}";
            feedbackClass = "wrong";
        }

        attempts++;

        if (attempts >= 10)
        {
            gameOver = true;
        }
        else
        {
            userAnswer = 0;
            GenerateQuestion();
        }
    }

    private void ResetGame()
    {
        score = 0;
        attempts = 0;
        gameOver = false;
        feedback = "";
        userAnswer = 0;
        GenerateQuestion();
    }

    private void CheckKey(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            SubmitAnswer();
        }
    }
}
